<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
  	<servlet-name>fcs</servlet-name>
  	<servlet-class>org.dubh.flashcards.web.server.FlashcardsServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>fcs</servlet-name>
  	<url-pattern>/flashcardsweb/fcs</url-pattern>
  </servlet-mapping>
   
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Flashcardsweb.html</welcome-file>
  </welcome-file-list>

</web-app>
